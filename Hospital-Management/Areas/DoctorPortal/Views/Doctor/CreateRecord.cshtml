@model Hospital_Management.ViewModels.RecordViewModel

@{
    ViewData["Title"] = "Create Record";
}

<h1>Create Record</h1>

<form asp-action="CreateRecord" method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter description here" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" class="form-control" placeholder="Enter diagnosis here" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prescription"></label>
        <input asp-for="Prescription" class="form-control" placeholder="Enter prescription here" />
        <span asp-validation-for="Prescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control" placeholder="Enter notes here"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" asp-items="@(ViewData["Patients"] as SelectList)" class="form-control"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="DoctorId" />

    <button type="submit" class="btn btn-primary">Create Record</button>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
