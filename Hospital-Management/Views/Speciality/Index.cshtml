@model List<SpecialityViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h2>Departments</h2>

<hr />

<div class="container mt-4">
    <div class="row">
        @foreach (var speciality in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@speciality.Name</h5>
                        <a href="/speciality/@speciality.Id" class="btn btn-success">
                            View Doctors
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

